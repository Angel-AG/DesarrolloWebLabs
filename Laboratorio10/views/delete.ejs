<%- include ("./partials/_header") %>

<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <form action="<%= postData.delete_url -%>" method="POST">
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            name="title"
            placeholder="Title"
            value="<%= postData.title -%>"
            disabled
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="author"
            class="form-control"
            placeholder="Author"
            value="<%= postData.author -%>"
            disabled
          />
        </div>
        <div class="form-group">
          <textarea class="form-control" name="post_data" cols="100" rows="10" placeholder="Add a Description" disabled>
            <%= postData.post_data -%></textarea
          >
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</main>

<%- include ("./partials/_footer") %>
